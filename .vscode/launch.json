{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Node: Nodemon",
			"processId": "${command:PickProcess}",
			"restart": true,
			"protocol": "inspector",
			"remoteRoot": "/apps/WRUApp-Backend",
			"stopOnEntry": true,
			"cwd": "${workspaceFolder}", // the root where everything is based on
			"localRoot": "${workspaceFolder}", // root of all server files
			"outFiles": ["${workspaceFolder}/build/src/**/*.js"],
			"port": 9229,
			"sourceMaps": true,
			"address": "localhost"
		}
	]
}
